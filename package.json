{
  "name": "task-dde",
  "version": "1.0.0",
  "description": "Playwright + TypeScript test automation framework",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "preinstall": "node -e \"if(!/yarn/.test(process.env.npm_execpath||''))throw new Error('Use yarn, not npm')\"",
    "test": "playwright test",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "report": "playwright show-report",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "codegen": "playwright codegen",
    "clean": "rm -rf test-results playwright-report blob-report playwright/.auth",
    "install:browsers": "playwright install --with-deps chromium firefox"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@playwright/test": "^1.50.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv": "^16.4.0",
    "eslint": "^9.0.0",
    "eslint-plugin-playwright": "^2.1.0",
    "typescript": "^5.7.0"
  }
}
